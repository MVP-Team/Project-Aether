<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AetherGUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500" Width="1080" Height="600" 
        x:Class="AetherGUI.Views.MainWindow" CanResize="False"
        Icon="/Assets/aet.ico" 
        Title="Aether Main Window">
	<Window.Styles>
		<Styles>
			<Style Selector="TextBlock.h1">
				<Setter Property="FontSize" Value="44"/>
				<Setter Property="FontWeight" Value="DemiBold"/>
				<Setter Property="FontStyle" Value="Oblique"/>
			</Style>
			<Style Selector="Expander.MenuExpander">
				<Setter Property="Opacity" Value="0.3"></Setter>
			</Style>
		</Styles>



	</Window.Styles>

	<Panel Background="#313131">
		<Design.DataContext>
			<vm:MainWindowViewModel/>
		</Design.DataContext>

		<StackPanel>
			<!--Hier wird Menu kommen-->
			<Expander ExpandDirection="Right" Height="600" Classes="MenuExpander"></Expander>
		</StackPanel>
		
		<StackPanel Height="500">

			<TextBlock Text="{Binding Greeting}" Classes="h1" Foreground="#aaaaff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			
		</StackPanel>
	</Panel>

	

	
</Window>
